<!DOCTYPE html>
<html>
  <head>
    <link href="https://fonts.googleapis.com/css?family=Baloo+Chettan|Permanent+Marker&display=swap" rel="stylesheet">
    <title>Kidultv</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://vjs.zencdn.net/7.6.0/video-js.css" rel="stylesheet">
  </head>

  <body>
    <div id="flex-content-container">
    <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <%= link_to 'Kidultv', root_url, class: 'navbar-brand' %>

  <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
      
      <li class="nav-item">
        <%= link_to'See all Courses', courses_path, class: 'nav-link' %>
      </li>

    </ul>
      <ul class="navbar-nav">
      <% if user_signed_in? %>
      <li class="nav-item">
          <%= link_to 'My Dashboard', dashboard_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
      <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
    </li>
      <% end %>
    </ul>

  </div>
</nav>

<% if notice.present? %>
  <p class="alert alert-info"><%= notice %></p>
<% end %>
<% if alert.present? %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

    <%= yield %>
  </div>

  <div id="footer">
    <div class="container">
      <div class="row">
      <div class="col-12 col-sm-3">
        <b class="ftr-title">Nerd-Lords</b>
        <hr class="ftr-line">
        <%= link_to 'Teach a Course', new_instructor_course_path %>
        <br />
        <%= link_to 'My Dashboard', dashboard_path %>
      </div>
      <div class="col-12 col-sm-3">
        <b class="ftr-title">About</b>
        <hr class="ftr-line">
        <%= link_to 'Team', team_path %>
        <br />
        <%= link_to 'Careers', careers_path %>
        <br />
        <%= link_to 'Privacy Policy', privacy_path %>
      </div>
      <div class="col-12 col-sm-3">
        <b class="ftr-title">Contact</b>
        <hr class="ftr-line">
        <a href="mailto:shaw.a.muvee@gmail.com">shaw.a.muvee@gmail.com</a>
        <br />
      </div>
      <div class="col-12 col-sm-3 social">
        <b class="ftr-title">Social</b>
        <hr class="ftr-line">
        <br />
        <%= link_to 'https://github.com/BingShawLim' do %>
         <span class="fab fa-github-square fa-2x social-button"></span>
         <% end %>
         <%= link_to 'https://twitter.com/limbingshaw1' do %>
         <span class="fab fa-linkedin fa-2x social-button"></span>
         <% end %>
         <%= link_to 'https://www.linkedin.com/in/bing-shaw-lim-a917b274/' do %>
         <span class="fab fa-twitter-square fa-2x social-button"></span>
         <% end %>
    </div>
    </div>
  </div>

  <script src='https://vjs.zencdn.net/7.6.0/video.js'></script>
  <script src="https://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>

  </body>
</html>
